{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "types": [
      "../../typings/",
      "node"
    ],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "moduleDetection": "auto",
    "resolveJsonModule": true,
    "experimentalDecorators": true, //启用装饰器
    "emitDecoratorMetadata": true, //启用装饰器提供元数据的支持
    "downlevelIteration": true, //启用扩展运算符
  },
  "exclude": [
    "dist"
  ]
}
